def checker1():
    global y
    global result
    if  y==True:
        Button(window,text='X',bg="blue",fg="white",pady=30,width=30).grid(row=2,column=0)
        y = False
    else:
        Button(window,text='O',bg="white",fg="blue",pady=30,width=30).grid(row=2,column=0)
        y=True
    result=pos_(1)
    if (result=='X'):
        print('winner=',result)
        l1=Label(window,text=result,font='BerlinSansFB').grid(row=5,column=1)
    if (result=='O'):
        print('winner=',result)
        l1=Label(window,text=result,font='BerlinSansFB').grid(row=5,column=1)
