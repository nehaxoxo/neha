list1=[]

winner=None
game=True
char='X'
count=0
board=['_','_','_',
       '_','_','_',
       '_','_','_']
def give_board():
    (board[0]+'|'+board[1]+'|'+board[2])
    (board[3]+'|'+board[4]+'|'+board[5])
    (board[6]+'|'+board[7]+'|'+board[8])


def flip():
    global char
    if char=='X':
        char='O'
    else:
        char='X'
def res_():
    global winner
    global game
    col_()
    if winner==None:
        dia_()
    if winner==None:
        row_()
        

def pos_(pos):
    
    if pos in list1:
        print('position taken')
    else:
        list1.append(pos)
        pos2=pos-1
        board[pos2]=char
        give_board()
        flip()
        res_()
        
    return winner


    
def row_():
    global winner
    global game
    row1=board[0]==board[1]==board[2]!='_'
    row2=board[3]==board[4]==board[5]!='_'
    row3=board[6]==board[7]==board[8]!='_'
    if row1==True :
        winner=board[0]
        game=False
    elif row2==True:
        winner=board[3]
        game=False
    elif row3==True:
        winner=board[6]
        game=False
    else:
        winner=None
def col_():
    global winner
    global game
    col1=board[0]==board[3]==board[6]!='_'
    col2=board[1]==board[4]==board[7]!='_'
    col3=board[2]==board[5]==board[8]!='_'
    if col1==True:
        winner=board[0]
        game=False
    elif col2==True:
        winner=board[1]
        game=False
    elif col3==True:
        winner=board[2]
        game=False
    else:
        winner=None
def dia_():
    global winner
    global game
    dia1=board[0]==board[4]==board[8]!='_'
    dia2=board[2]==board[4]==board[6]!='_'
    if dia1==True:
        winner=board[0]
        game=False
    elif dia2==True:
        winner=board[2]
        game=False
    else:
        winner=None
def tie_():
    global winner
    global game
    if winner==None:
        game=False
        


  


window.mainloop


